@model IEnumerable<Models.InpCodes>

@{
    ViewBag.Title = "Index";
}


<p>
    @Html.ActionLink("Add Codes", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table" id="tbl">
    <thead>
        <tr>
            <th>
            </th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    <div style="background-color:#EFF0F1;
        border: 1px solid #DDD;
        padding: 10px;">
                        <a style="color:black;text-decoration:none" href="@Url.Action("Details", "Code", new { id=item.Id })">  @Html.DisplayFor(modelItem => item.Topic)</a><br />
                        <a style="color:black;text-decoration:none" href="@Url.Action("Edit","Code",new { id=item.Id })">Edit</a>
                    </div>
                </td>

                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                    </td>*@
            </tr>
        }
    </tbody>
</table>
<link type="text/css" href="~/Content/vendor-bootstrap-datatables.css" rel="stylesheet">

@section Scripts{
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/vendors/jquery.dataTables.js"></script>
    <script src="~/vendors/dataTables.bootstrap4.js"></script>
    <script src="/Vendors/dataTables.bootstrap4.js"></script>
    <script>



        $(document).ready(function () {
           
            $("#tbl").dataTable({
                "pageLength": 50,
                "lengthChange": false
            });
            $('.dataTables_filter input[type="search"]').css(
                { 'width': '350px', 'display': 'inline-block' }
            );
        })
    </script>
}